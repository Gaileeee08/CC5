CREATE TABLE friends(

id INTEGER,
name TEXT,
birthday DATE
);

INSERT INTO friends(id, name, birthday)
Values (1, 'Jane Doe' , '1990-05-03');

INSERT INTO friends(id, name, birthday)
Values (2, 'Jasmine Doe' , '1989-04-01');

INSERT INTO friends(id, name, birthday)
Values (3, 'John Doe' , '1987-03-23');


UPDATE friends
SET name = 'Jane Smith'
WHERE id = 1;

ALTER TABLE friends
ADD COLUMN email TEXT;

UPDATE friends
SET email = 'jane@codeacademy.com'
WHERE id = 1;

DELETE FROM friends
WHERE id = 1;

SELECT * 
FROM friends;
